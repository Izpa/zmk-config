/ {
  aliases { arduino_i2c = &i2c1; };
};

&pinctrl {
  i2c1_default: i2c1_default {
    group1 { psels = <NRF_PSEL(TWIM_SDA, 0, 20)>, <NRF_PSEL(TWIM_SCL, 0, 17)>; };
  };
  i2c1_sleep: i2c1_sleep {
    group1 { psels = <NRF_PSEL(TWIM_SDA, 0, 20)>, <NRF_PSEL(TWIM_SCL, 0, 17)>; low-power-enable; };
  };
};

&i2c1 {
  status = "okay";
  pinctrl-0 = <&i2c1_default>;
  pinctrl-1 = <&i2c1_sleep>;
  pinctrl-names = "default", "sleep";
}
